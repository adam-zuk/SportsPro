@model Incident

@{ViewBag.Title = "Delete Incident";
}

<h1>Confirm Deletion</h1>
<h4>@Model.Customer.FullName * @Model.Title * @Model.ProductID</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IncidentID" />

    <button type="submit" class="btn btn-success">Delete</button>
    <a asp-controller="Incident" asp-action="List"
       class="btn btn-success">Cancel</a>
</form>
