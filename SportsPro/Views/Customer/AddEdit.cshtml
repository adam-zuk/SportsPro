@model Customer

@{
    string title = ViewBag.Action + " Customer";
    ViewData["Title"] = title;
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<h1>@title</h1>


<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CountryID">Country</label>
        <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.Countries,"CountryID", "Name", Model.CountryID))" class="form-control">
            <option value="">select a country</option>
        </select>

        <!--
                    class="form-control">
                <option value="">select a country</option>
                @foreach (Country c in ViewBag.Countries)
                {
        <option value="@c.CountryID">@c.Name</option>            }
            </select>
                 -->

    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <input type="hidden" asp-for="CustomerID" />

    <button type="submit" class="btn btn-primary">Save</button>

    <a asp-controller="Customer" asp-action="List"
       class="btn btn-primary">Cancel</a>


</form>




